                    </div>
                </div>

                <!-- Settings Section -->
                <div class="section-content" id="settings-section">
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">System Settings</h1>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Institute Information</h6>
                                </div>
                                <div class="card-body">
                                    <form id="instituteForm">
                                        <div class="form-group">
                                            <label>Institute Name</label>
                                            <input type="text" class="form-control" id="instituteName" value="EduCare Tuition Center">
                                        </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            <textarea class="form-control" id="instituteAddress" rows="3">123 Education Street, Learning City</textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Phone Number</label>
                                            <input type="text" class="form-control" id="institutePhone" value="+91 9876543210">
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="email" class="form-control" id="instituteEmail" value="info@educare.com">
                                        </div>
                                        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">System Configuration</h6>
                                </div>
                                <div class="card-body">
                                    <form id="systemConfigForm">
                                        <div class="form-group">
                                            <label>Academic Year</label>
                                            <select class="form-control" id="academicYear">
                                                <option>2023-2024</option>
                                                <option>2022-2023</option>
                                                <option>2021-2022</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Time Zone</label>
                                            <select class="form-control" id="timeZone">
                                                <option>Asia/Kolkata (IST)</option>
                                                <option>UTC</option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Date Format</label>
                                            <select class="form-control" id="dateFormat">
                                                <option>DD/MM/YYYY</option>
                                                <option>MM/DD/YYYY</option>
                                                <option>YYYY-MM-DD</option>
                                            </select>
                                        </div>
                                        <div class="form-check mt-3">
                                            <input class="form-check-input" type="checkbox" id="emailNotifications" checked>
                                            <label class="form-check-label" for="emailNotifications">
                                                Enable Email Notifications
                                            </label>
                                        </div>
                                        <button type="submit" class="btn btn-primary mt-3">Save Configuration</button>
                                    </form>
                                </div>
                            </div>
                            
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 bg-danger text-white">
                                    <h6 class="m-0 font-weight-bold">Danger Zone</h6>
                                </div>
                                <div class="card-body">
                                    <button class="btn btn-outline-danger" id="resetDataBtn">Reset All Data</button>
                                    <button class="btn btn-danger mt-2" id="deleteAccountBtn">Delete Account</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © EduCare 2023</span>
            </div>
        </div>
    </footer>

    <!-- Add Student Modal -->
    <div class="modal fade" id="addStudentModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Student</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Student form would appear here</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- View Student Modal -->
    <div class="modal fade" id="viewStudentModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Student Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="studentDetailsContent">
                    <!-- Student details will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation Modal -->
    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmationModalTitle">Confirm Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="confirmationModalBody">
                    Are you sure you want to perform this action?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmActionBtn">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Main Application Module
        const EduCareApp = (function() {
            // Private variables
            let currentSection = 1;
            const totalSections = 4;
            let attendanceChart = null;
            let paymentChart = null;
            let performanceChart = null;
            let revenueChart = null;
            let currentAction = null;
            let currentItemId = null;
            
            // DOM Elements
            const elements = {
                sidebarToggle: document.getElementById('sidebarToggle'),
                sidebarWrapper: document.getElementById('sidebar-wrapper'),
                navLinks: document.querySelectorAll('.nav-link'),
                sectionContents: document.querySelectorAll('.section-content'),
                nextButtons: document.querySelectorAll('.next-btn'),
                prevButtons: document.querySelectorAll('.prev-btn'),
                admissionForm: document.getElementById('admissionForm'),
                studentPhotoInput: document.getElementById('studentPhoto'),
                studentPhotoPreview: document.querySelector('.student-photo'),
                addStudentBtn: document.getElementById('addStudentBtn'),
                addClassBtn: document.getElementById('addClassBtn'),
                addSubjectBtn: document.getElementById('addSubjectBtn'),
                markAttendanceBtn: document.getElementById('markAttendanceBtn'),
                addPaymentBtn: document.getElementById('addPaymentBtn'),
                generateReportBtn: document.getElementById('generateReportBtn'),
                printReportBtn: document.getElementById('printReportBtn'),
                profileBtn: document.getElementById('profileBtn'),
                settingsBtn: document.getElementById('settingsBtn'),
                logoutBtn: document.getElementById('logoutBtn'),
                resetDataBtn: document.getElementById('resetDataBtn'),
                deleteAccountBtn: document.getElementById('deleteAccountBtn'),
                customReportForm: document.getElementById('customReportForm'),
                instituteForm: document.getElementById('instituteForm'),
                systemConfigForm: document.getElementById('systemConfigForm'),
                viewButtons: document.querySelectorAll('.view-btn, .view-student, .view-class-btn, .view-subject-btn, .view-attendance-btn, .view-payment-btn'),
                editButtons: document.querySelectorAll('.edit-btn, .edit-class-btn, .edit-subject-btn, .edit-attendance-btn, .edit-payment-btn'),
                deleteButtons: document.querySelectorAll('.delete-btn, .delete-payment-btn'),
                exportButtons: document.querySelectorAll('.export-btn'),
                printButtons: document.querySelectorAll('.print-btn'),
                addStudentModal: new bootstrap.Modal(document.getElementById('addStudentModal')),
                viewStudentModal: new bootstrap.Modal(document.getElementById('viewStudentModal')),
                confirmationModal: new bootstrap.Modal(document.getElementById('confirmationModal')),
                confirmActionBtn: document.getElementById('confirmActionBtn')
            };
            
            // Initialize the application
            function init() {
                checkSidebarState();
                setupEventListeners();
                initAttendanceChart();
                initPaymentChart();
                initPerformanceChart();
                initRevenueChart();
                showSection('dashboard');
            }
            
            // Check saved sidebar state
            function checkSidebarState() {
                const savedState = localStorage.getItem('sidebarState');
                if (window.innerWidth > 768) {
                    // Always show sidebar on desktop
                    elements.sidebarWrapper.classList.add('toggled');
                } else {
                    // Apply saved state on mobile
                    if (savedState === 'open') {
                        elements.sidebarWrapper.classList.add('toggled');
                    }
                }
            }
            
            // Set up event listeners
            function setupEventListeners() {
                // Sidebar toggle
                elements.sidebarToggle.addEventListener('click', toggleSidebar);
                
                // Navigation links
                elements.navLinks.forEach(link => {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        const sectionId = this.getAttribute('data-section');
                        showSection(sectionId);
                        setActiveNavLink(this);
                        
                        // Close sidebar on mobile after navigation
                        if (window.innerWidth <= 768) {
                            elements.sidebarWrapper.classList.remove('toggled');
                            localStorage.setItem('sidebarState', 'closed');
                        }
                    });
                });
                
                // Form navigation
                elements.nextButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const nextSection = this.getAttribute('data-next');
                        navigateForm(nextSection);
                    });
                });
                
                elements.prevButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const prevSection = this.getAttribute('data-prev');
                        navigateForm(prevSection);
                    });
                });
                
                // Form submission
                elements.admissionForm.addEventListener('submit', submitAdmissionForm);
                
                // Student photo upload
                elements.studentPhotoInput.addEventListener('change', handlePhotoUpload);
                
                // Add buttons
                elements.addStudentBtn.addEventListener('click', () => {
                    showSection('admissions');
                });
                
                elements.addClassBtn.addEventListener('click', () => {
                    showAlert('Add Class functionality will be implemented here', 'info');
                });
                
                elements.addSubjectBtn.addEventListener('click', () => {
                    showAlert('Add Subject functionality will be implemented here', 'info');
                });
                
                elements.markAttendanceBtn.addEventListener('click', () => {
                    showAlert('Mark Attendance functionality will be implemented here', 'info');
                });
                
                elements.addPaymentBtn.addEventListener('click', () => {
                    showAlert('Add Payment functionality will be implemented here', 'info');
                });
                
                // Report buttons
                elements.generateReportBtn.addEventListener('click', () => {
                    showAlert('Generate Report functionality will be implemented here', 'info');
                });
                
                elements.printReportBtn.addEventListener('click', () => {
                    showAlert('Print Report functionality will be implemented here', 'info');
                });
                
                // Profile buttons
                elements.profileBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    showAlert('Profile functionality will be implemented here', 'info');
                });
                
                elements.settingsBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    showSection('settings');
                });
                
                elements.logoutBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    showConfirmation('Logout', 'Are you sure you want to logout?', () => {
                        showAlert('You have been logged out successfully', 'success');
                    });
                });
                
                // Danger zone buttons
                elements.resetDataBtn.addEventListener('click', () => {
                    showConfirmation('Reset Data', 'Are you sure you want to reset all data? This action cannot be undone.', () => {
                        showAlert('All data has been reset successfully', 'success');
                    });
                });
                
                elements.deleteAccountBtn.addEventListener('click', () => {
                    showConfirmation('Delete Account', 'Are you sure you want to delete your account? This action cannot be undone.', () => {
                        showAlert('Your account has been deleted successfully', 'success');
                    });
                });
                
                // View buttons
                elements.viewButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const id = this.getAttribute('data-id');
                        viewItem(this.classList.contains('view-student') ? 'student' : 
                              this.classList.contains('view-class-btn') ? 'class' :
                              this.classList.contains('view-subject-btn') ? 'subject' :
                              this.classList.contains('view-attendance-btn') ? 'attendance' : 'payment', id);
                    });
                });
                
                // Edit buttons
                elements.editButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const id = this.getAttribute('data-id');
                        editItem(this.classList.contains('edit-btn') ? 'student' : 
                               this.classList.contains('edit-class-btn') ? 'class' :
                               this.classList.contains('edit-subject-btn') ? 'subject' :
                               this.classList.contains('edit-attendance-btn') ? 'attendance' : 'payment', id);
                    });
                });
                
                // Delete buttons
                elements.deleteButtons.forEach(button => {
                    button.addEventListener('click', function() {
                        const id = this.getAttribute('data-id');
                        deleteItem(this.classList.contains('delete-btn') ? 'student' : 'payment', id);
                    });
                });
                
                // Export buttons
                elements.exportButtons.forEach(button => {
                    button.addEventListener('click', function(e) {
                        e.preventDefault();
                        const type = this.getAttribute('data-type');
                        exportData(type);
                    });
                });
                
                // Print buttons
                elements.printButtons.forEach(button => {
                    button.addEventListener('click', function(e) {
                        e.preventDefault();
                        printData();
                    });
                });
                
                // Form submissions
                elements.customReportForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    generateCustomReport();
                });
                
                elements.instituteForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    saveInstituteInfo();
                });
                
                elements.systemConfigForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    saveSystemConfig();
                });
                
                // Confirmation modal
                elements.confirmActionBtn.addEventListener('click', confirmAction);
                
                // Close sidebar when clicking outside on mobile
                document.addEventListener('click', function(e) {
                    const isSidebar = e.target.closest('#sidebar-wrapper');
                    const isToggleButton = e.target.closest('#sidebarToggle');
                    
                    if (!isSidebar && !isToggleButton && window.innerWidth <= 768) {
                        elements.sidebarWrapper.classList.remove('toggled');
                        localStorage.setItem('sidebarState', 'closed');
                    }
                });
                
                // Handle window resize
                window.addEventListener('resize', function() {
                    if (window.innerWidth > 768) {
                        elements.sidebarWrapper.classList.add('toggled');
                    } else {
                        const savedState = localStorage.getItem('sidebarState');
                        if (savedState !== 'open') {
                            elements.sidebarWrapper.classList.remove('toggled');
                        }
                    }
                });
            }
            
            // Toggle sidebar
            function toggleSidebar() {
                elements.sidebarWrapper.classList.toggle('toggled');
                
                // Store sidebar state in localStorage
                if (elements.sidebarWrapper.classList.contains('toggled')) {
                    localStorage.setItem('sidebarState', 'open');
                } else {
                    localStorage.setItem('sidebarState', 'closed');
                }
            }
            
            // Show section
            function showSection(sectionId) {
                elements.sectionContents.forEach(section => {
                    section.classList.remove('active');
                });
                document.getElementById(`${sectionId}-section`).classList.add('active');
            }
            
            // Set active nav link
            function setActiveNavLink(activeLink) {
                elements.navLinks.forEach(link => link.classList.remove('active'));
                activeLink.classList.add('active');
            }
            
            // Navigate form sections
            function navigateForm(sectionId) {
                document.querySelector('.form-section.active').classList.remove('active');
                document.getElementById(sectionId).classList.add('active');
                
                currentSection = parseInt(sectionId.replace('section', ''));
                updateProgressBar();
            }
            
            // Update progress bar
            function updateProgressBar() {
                const progressPercentage = (currentSection / totalSections) * 100;
                const progressBar = document.querySelector('.progress-bar');
                progressBar.style.width = progressPercentage + '%';
                progressBar.setAttribute('aria-valuenow', progressPercentage);
                progressBar.textContent = Math.round(progressPercentage) + '%';
            }
            
            // Handle form submission
            function submitAdmissionForm(e) {
                e.preventDefault();
                
                // Show success animation
                const submitBtn = e.target.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-check"></i> Success!';
                submitBtn.classList.add('btn-success');
                
                setTimeout(() => {
                    submitBtn.innerHTML = 'Submit Admission';
                    submitBtn.classList.remove('btn-success');
                    
                    // Show alert
                    showAlert('Admission submitted successfully!', 'success');
                    
                    // Reset form
                    e.target.reset();
                    document.querySelector('.student-photo').src = 'https://via.placeholder.com/150';
                    navigateForm('section1');
                }, 1500);
            }
            
            // Handle photo upload
            function handlePhotoUpload(e) {
                if (e.target.files && e.target.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        elements.studentPhotoPreview.src = event.target.result;
                        
                        // Add pulse animation
                        elements.studentPhotoPreview.classList.add('pulse');
                        setTimeout(() => {
                            elements.studentPhotoPreview.classList.remove('pulse');
                        }, 1000);
                    };
                    reader.readAsDataURL(e.target.files[0]);
                }
            }
            
            // View item details
            function viewItem(type, id) {
                // In a real app, you would fetch this data from an API
                let content = '';
                let title = '';
                
                switch(type) {
                    case 'student':
                        title = 'Student Details';
                        content = `
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <img src="https://via.placeholder.com/150" class="student-photo mb-3" width="150" height="150">
                                </div>
                                <div class="col-md-8">
                                    <h4>Rahul Sharma</h4>
                                    <p><strong>ID:</strong> ${id}</p>
                                    <p><strong>Class:</strong> 10</p>
                                    <p><strong>Subjects:</strong> Maths, Science</p>
                                    <p><strong>Batch:</strong> Morning (7-9 AM)</p>
                                    <p><strong>Status:</strong> <span class="badge bg-success">Active</span></p>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <h5>Contact Information</h5>
                                    <p><strong>Phone:</strong> +91 9876543210</p>
                                    <p><strong>Email:</strong> rahul@example.com</p>
                                    <p><strong>Address:</strong> 123 Street, City</p>
                                </div>
                                <div class="col-md-6">
                                    <h5>Parent Information</h5>
                                    <p><strong>Father:</strong> Mr. Sharma (9876543210)</p>
                                    <p><strong>Mother:</strong> Mrs. Sharma (9876543211)</p>
                                </div>
                            </div>
                        `;
                        break;
                    case 'class':
                        title = 'Class Details';
                        content = `
                            <h4>Class 10 - Science</h4>
                            <p><strong>ID:</strong> ${id}</p>
                            <p><strong>Subjects:</strong> Maths, Physics, Chemistry</p>
                            <p><strong>Teacher:</strong> Mr. Sharma</p>
                            <p><strong>Schedule:</strong> Mon-Fri, 8-10 AM</p>
                            <p><strong>Students:</strong> 25</p>
                            <div class="mt-3">
                                <h5>Student List</h5>
                                <ul class="list-group">
                                    <li class="list-group-item">Rahul Sharma</li>
                                    <li class="list-group-item">Priya Patel</li>
                                    <li class="list-group-item">Amit Singh</li>
                                </ul>
                            </div>
                        `;
                        break;
                    case 'payment':
                        title = 'Payment Details';
                        content = `
                            <h4>Payment Information</h4>
                            <p><strong>ID:</strong> ${id}</p>
                            <p><strong>Student:</strong> Rahul Sharma</p>
                            <p><strong>Amount:</strong> ₹3,000</p>
                            <p><strong>Date:</strong> 2023-06-10</p>
                            <p><strong>Status:</strong> <span class="badge bg-success">Paid</span></p>
                            <p><strong>Payment Method:</strong> Online</p>
                            <p><strong>Receipt No:</strong> REC${id}</p>
                        `;
                        break;
                    // Add cases for other types as needed
                }
                
                document.querySelector('#viewStudentModal .modal-title').textContent = title;
                document.getElementById('studentDetailsContent').innerHTML = content;
                elements.viewStudentModal.show();
            }
            
            // Edit item
            function editItem(type, id) {
                showAlert(`Edit ${type} with ID: ${id} functionality will be implemented here`, 'info');
            }
            
            // Delete item
            function deleteItem(type, id) {
                showConfirmation('Delete ' + type.charAt(0).toUpperCase() + type.slice(1), 
                    `Are you sure you want to delete this ${type}? This action cannot be undone.`, 
                    () => {
                        showAlert(`${type.charAt(0).toUpperCase() + type.slice(1)} with ID ${id} has been deleted`, 'success');
                    });
            }
            
            // Export data
            function exportData(type) {
                showAlert(`Exporting data as ${type.toUpperCase()} file`, 'info');
            }
            
            // Print data
            function printData() {
                showAlert('Printing data...', 'info');
            }
            
            // Generate custom report
            function generateCustomReport() {
                const reportType = document.getElementById('reportType').value;
                const fromDate = document.getElementById('fromDate').value;
                const toDate = document.getElementById('toDate').value;
                
                showAlert(`Generating ${reportType} report from ${fromDate} to ${toDate}`, 'info');
            }
            
            // Save institute info
            function saveInstituteInfo() {
                showAlert('Institute information saved successfully', 'success');
            }
            
            // Save system config
            function saveSystemConfig() {
                showAlert('System configuration saved successfully', 'success');
            }
            
            // Show confirmation dialog
            function showConfirmation(title, message, callback) {
                document.getElementById('confirmationModalTitle').textContent = title;
                document.getElementById('confirmationModalBody').textContent = message;
                currentAction = callback;
                elements.confirmationModal.show();
            }
            
            // Confirm action
            function confirmAction() {
                if (currentAction) {
                    currentAction();
                }
                elements.confirmationModal.hide();
            }
            
            // Show alert
            function showAlert(message, type) {
                const alertDiv = document.createElement('div');
                alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
                alertDiv.role = 'alert';
                alertDiv.innerHTML = `
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                `;
                
                const container = document.querySelector('.container-fluid');
                container.insertBefore(alertDiv, container.firstChild);
                
                // Auto dismiss after 3 seconds
                setTimeout(() => {
                    const alert = bootstrap.Alert.getOrCreateInstance(alertDiv);
                    alert.close();
                }, 3000);
            }
            
            // Initialize attendance chart
            function initAttendanceChart() {
                const ctx = document.getElementById('attendanceChart').getContext('2d');
                attendanceChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                        datasets: [{
                            label: 'Attendance Percentage',
                            data: [85, 79, 88, 91, 76, 89],
                            backgroundColor: 'rgba(78, 115, 223, 0.05)',
                            borderColor: 'rgba(78, 115, 223, 1)',
                            pointBackgroundColor: 'rgba(78, 115, 223, 1)',
                            pointBorderColor: '#fff',
                            pointHoverBackgroundColor: '#fff',
                            pointHoverBorderColor: 'rgba(78, 115, 223, 1)',
                            borderWidth: 2,
                            tension: 0.3
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: false,
                                min: 50,
                                max: 100,
                                ticks: {
                                    callback: function(value) {
                                        return value + '%';
                                    }
                                }
                            }
                        },
                        animation: {
                            duration: 2000,
                            easing: 'easeOutQuart'
                        }
                    }
                });
            }

            // Initialize payment chart
            function initPaymentChart() {
                const ctx = document.getElementById('paymentChart').getContext('2d');
                paymentChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: ["Paid", "Pending", "Overdue"],
                        datasets: [{
                            data: [75, 15, 10],
                            backgroundColor: ['#4e73df', '#1cc88a', '#36b9cc'],
                            hoverBackgroundColor: ['#2e59d9', '#17a673', '#2c9faf'],
                        }],
                    },
                    options: {
                        maintainAspectRatio: false,
                        cutout: '80%',
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            }

            // Initialize performance chart
            function initPerformanceChart() {
                const ctx = document.getElementById('performanceChart').getContext('2d');
                performanceChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ["Class 9", "Class 10", "Class 11", "Class 12"],
                        datasets: [{
                            label: "Average Score",
                            backgroundColor: "#4e73df",
                            hoverBackgroundColor: "#2e59d9",
                            borderColor: "#4e73df",
                            data: [75, 82, 78, 85],
                        }],
                    },
                    options: {
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100
                            }
                        }
                    }
                });
            }

            // Initialize revenue chart
            function initRevenueChart() {
                const ctx = document.getElementById('revenueChart').getContext('2d');
                revenueChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
                        datasets: [{
                            label: "Revenue",
                            backgroundColor: "#1cc88a",
                            hoverBackgroundColor: "#17a673",
                            borderColor: "#1cc88a",
                            data: [125000, 118000, 132000, 141000, 128000, 135000],
                        }],
                    },
                    options: {
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            }
            
            // Public API
            return {
                init: init
            };
        })();

        // Initialize the application when DOM is loaded
        document.addEventListener('DOMContentLoaded', EduCareApp.init);
    </script>
</body>
</html>
