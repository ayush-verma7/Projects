        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile Navigation
            const mobileNavBtn = document.getElementById('mobileNavBtn');
            const sidebar = document.getElementById('sidebar');
            const sidebarClose = document.getElementById('sidebarClose');
            
            mobileNavBtn.addEventListener('click', () => {
                sidebar.classList.add('active');
            });
            
            sidebarClose.addEventListener('click', () => {
                sidebar.classList.remove('active');
            });
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    if(targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if(targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                        
                        // Close sidebar if open
                        sidebar.classList.remove('active');
                    }
                });
            });
            
            // Header scroll effect
            window.addEventListener('scroll', () => {
                const header = document.querySelector('header');
                if(window.scrollY > 50) {
                    header.style.padding = '0.5rem 2rem';
                    header.style.background = 'var(--primary)';
                } else {
                    header.style.padding = '1rem 2rem';
                    header.style.background = 'linear-gradient(135deg, var(--primary), var(--secondary))';
                }
            });
            
            // Animation on scroll
            function animateOnScroll() {
                const elements = document.querySelectorAll('.destination-card, .section-title');
                
                elements.forEach(element => {
                    const elementPosition = element.getBoundingClientRect().top;
                    const screenPosition = window.innerHeight / 1.2;
                    
                    if(elementPosition < screenPosition) {
                        element.style.opacity = '1';
                        element.style.transform = 'translateY(0)';
                    }
                });
            }
            
            // Set initial state for animated elements
            document.querySelectorAll('.destination-card, .section-title').forEach(element => {
                element.style.opacity = '0';
                element.style.transform = 'translateY(20px)';
                element.style.transition = 'all 0.6s ease';
            });
            
            window.addEventListener('scroll', animateOnScroll);
            window.addEventListener('load', animateOnScroll);
            
            // Enhanced Counting Animation with Different Effects
            function animateCounters() {
                const happyTravelers = document.querySelector('.stat-box:nth-child(1) .stat-number');
                const destinations = document.querySelector('.stat-box:nth-child(2) .stat-number');
                const awards = document.querySelector('.stat-box:nth-child(3) .stat-number');
                
                // Animate Happy Travelers with easing and comma formatting
                let currentHappy = 0;
                const targetHappy = +happyTravelers.getAttribute('data-count');
                const happyInterval = setInterval(() => {
                    currentHappy += Math.ceil(targetHappy / 30); // Adjust speed
                    if (currentHappy >= targetHappy) {
                        clearInterval(happyInterval);
                        currentHappy = targetHappy;
                    }
                    happyTravelers.textContent = currentHappy.toLocaleString();
                }, 50);

                // Animate Destinations with faster count
                let currentDest = 0;
                const targetDest = +destinations.getAttribute('data-count');
                const destInterval = setInterval(() => {
                    currentDest += 2; // Faster increment
                    if (currentDest >= targetDest) {
                        clearInterval(destInterval);
                        currentDest = targetDest;
                    }
                    destinations.textContent = currentDest;
                }, 30);

                // Animate Awards with slower, step-by-step count
                let currentAwards = 0;
                const targetAwards = +awards.getAttribute('data-count');
                const awardsInterval = setInterval(() => {
                    currentAwards += 1;
                    if (currentAwards >= targetAwards) {
                        clearInterval(awardsInterval);
                        currentAwards = targetAwards;
                    }
                    awards.textContent = currentAwards;
                }, 150);
            }

            // Trigger counting animation when section is in view
            function checkCounters() {
                const statsSection = document.querySelector('.stats-container');
                if(!statsSection) return;
                
                const sectionPosition = statsSection.getBoundingClientRect().top;
                const screenPosition = window.innerHeight / 1.2;
                
                if(sectionPosition < screenPosition && !statsSection.classList.contains('animated')) {
                    statsSection.classList.add('animated');
                    
                    // Add special animation class to Happy Travelers box
                    const happyBox = document.querySelector('.stat-box:nth-child(1)');
                    happyBox.classList.add('highlight-animation');
                    
                    // Make all stat boxes visible
                    document.querySelectorAll('.stat-box').forEach(box => {
                        box.style.opacity = '1';
                        box.style.transform = 'translateY(0)';
                    });
                    
                    // Start counting after slight delay for visual effect
                    setTimeout(animateCounters, 500);
                }
            }
            
            window.addEventListener('scroll', checkCounters);
            window.addEventListener('load', checkCounters);
            
            // Inquiry Form Submission
            const inquiryForm = document.getElementById('inquiryForm');
            if(inquiryForm) {
                inquiryForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    // Get form values
                    const name = document.getElementById('name').value;
                    const email = document.getElementById('email').value;
                    const phone = document.getElementById('phone').value;
                    const subject = document.getElementById('subject').value;
                    const message = document.getElementById('message').value;
                    
                    // Show success message
                    alert('Thank you for your inquiry! We will contact you soon.');
                    
                    // Reset form
                    this.reset();
                });
            }
            
            // Package Modal Functionality
            const packageModal = document.getElementById('packageModal');
            const modalClose = document.getElementById('modalClose');
            const viewPackageButtons = document.querySelectorAll('.view-package');
            const bookNowBtn = document.getElementById('bookNowBtn');
            
            // Open modal when package view button is clicked
            viewPackageButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const packageId = this.getAttribute('data-package');
                    const packageData = packages[packageId];
                    
                    if(packageData) {
                        // Set modal title and subtitle
                        document.getElementById('modalPackageTitle').textContent = packageData.title;
                        document.getElementById('modalPackageSubtitle').textContent = packageData.subtitle;
                        
                        // Build modal content
                        let modalContent = `
                            <div class="package-highlights">
                                <div class="package-image">
                                    <img src="${packageData.image}" alt="${packageData.title}">
                                </div>
                                <div class="package-summary">
                                    <h4>Package Highlights</h4>
                                    <ul>
                                        ${packageData.highlights.map(highlight => `<li><i class="fas fa-check-circle"></i> ${highlight}</li>`).join('')}
                                    </ul>
                                    <div class="package-price">${packageData.price}</div>
                                    <a href="#contact" class="btn btn-primary">Enquire Now</a>
                                </div>
                            </div>
                            
                            <div class="package-details">
                                <h4>Package Description</h4>
                                <p>${packageData.description}</p>
                            </div>
                            
                            <div class="package-details">
                                <h4>Itinerary</h4>
                                ${packageData.itinerary.map(day => `
                                    <div class="itinerary-day">
                                        <h5>${day.day}: ${day.title}</h5>
                                        <p>${day.description}</p>
                                    </div>
                                `).join('')}
                            </div>
                            
                            <div class="inclusions-exclusions">
                                <div class="inclusions">
                                    <h4>Inclusions</h4>
                                    <ul>
                                        ${packageData.inclusions.map(item => `<li>${item}</li>`).join('')}
                                    </ul>
                                </div>
                                <div class="exclusions">
                                    <h4>Exclusions</h4>
                                    <ul>
                                        ${packageData.exclusions.map(item => `<li>${item}</li>`).join('')}
                                    </ul>
                                </div>
                            </div>
                        `;
                        
                        document.getElementById('modalPackageContent').innerHTML = modalContent;
                        packageModal.style.display = 'block';
                        document.body.style.overflow = 'hidden';
                    }
                });
            });
            
            // Close modal when close button is clicked
            modalClose.addEventListener('click', () => {
                packageModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            });
            
            // Close modal when clicking outside the modal content
            window.addEventListener('click', (e) => {
                if(e.target === packageModal) {
                    packageModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });
            
            // Book Now button in modal
            bookNowBtn.addEventListener('click', () => {
                packageModal.style.display = 'none';
                document.body.style.overflow = 'auto';
                window.location.href = '#contact';
            });

            // Service Modal Functionality
            const serviceModal = document.getElementById('serviceModal');
            const serviceModalClose = document.getElementById('serviceModalClose');
            const enquireNowBtn = document.getElementById('enquireNowBtn');
            
            // Visa service buttons
            const visaServiceButtons = document.querySelectorAll('.visa-service');
            visaServiceButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const serviceId = this.getAttribute('data-service');
                    const serviceData = services[serviceId];
                    
                    if(serviceData) {
                        openServiceModal(serviceData);
                    }
                });
            });
            
            // Add-on service buttons
            const addonServiceButtons = document.querySelectorAll('.addon-service');
            addonServiceButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    const serviceId = this.getAttribute('data-service');
                    const serviceData = services[serviceId];
                    
                    if(serviceData) {
                        openServiceModal(serviceData);
                    }
                });
            });
            
            function openServiceModal(serviceData) {
                document.getElementById('modalServiceTitle').textContent = serviceData.title;
                
                let modalContent = `
                    <div class="package-details">
                        <h4>Service Description</h4>
                        <p>${serviceData.description}</p>
                    </div>
                    
                    <div class="package-details">
                        <h4>Service Details</h4>
                        <ul>
                            ${serviceData.details.map(detail => `<li><i class="fas fa-check" style="color: var(--accent);"></i> ${detail}</li>`).join('')}
                        </ul>
                    </div>
                    
                    <div class="package-details">
                        <h4>Pricing</h4>
                        <p>${serviceData.pricing}</p>
                    </div>
                `;
                
                document.getElementById('modalServiceContent').innerHTML = modalContent;
                serviceModal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            }
            
            // Close service modal when close button is clicked
            serviceModalClose.addEventListener('click', () => {
                serviceModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            });
            
            // Close service modal when clicking outside the modal content
            window.addEventListener('click', (e) => {
                if(e.target === serviceModal) {
                    serviceModal.style.display = 'none';
                    document.body.style.overflow = 'auto';
                }
            });
            
            // Enquire Now button in service modal
            enquireNowBtn.addEventListener('click', () => {
                serviceModal.style.display = 'none';
                document.body.style.overflow = 'auto';
                window.location.href = '#contact';
            });

            // Send Query button functionality
            const sendQueryBtn = document.getElementById('sendQueryBtn');
            const mobileQueryBtn = document.getElementById('mobileQueryBtn');
            
            function scrollToContactForm() {
                const contactSection = document.getElementById('contact');
                if(contactSection) {
                    window.scrollTo({
                        top: contactSection.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Close sidebar if open
                    sidebar.classList.remove('active');
                }
            }
            
            if(sendQueryBtn) {
                sendQueryBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    scrollToContactForm();
                });
            }
            
            if(mobileQueryBtn) {
                mobileQueryBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    scrollToContactForm();
                });
            }

            // Booking tabs functionality
            const bookingTabs = document.querySelectorAll('.booking-tab');
            const formSections = document.querySelectorAll('.form-section');
            
            bookingTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Remove active class from all tabs
                    bookingTabs.forEach(t => t.classList.remove('active'));
                    
                    // Add active class to clicked tab
                    this.classList.add('active');
                    
                    // Hide all form sections
                    formSections.forEach(section => section.classList.remove('active'));
                    
                    // Show the corresponding form section
                    const tabType = this.getAttribute('data-tab');
                    const activeForm = document.getElementById(`${tabType}-form`);
                    if(activeForm) {
                        activeForm.classList.add('active');
                    }
                    
                    // Update search button text
                    const searchBtn = document.querySelector('.search-btn');
                    if(tabType === 'flights-hotels') {
                        searchBtn.textContent = 'Search Flights & Hotels';
                    } else if(tabType === 'flights') {
                        searchBtn.textContent = 'Search Flights';
                    } else if(tabType === 'hotels') {
                        searchBtn.textContent = 'Search Hotels';
                    }
                });
            });
            
            // Set default dates for booking form
            function setDefaultDates() {
                const today = new Date();
                const tomorrow = new Date();
                tomorrow.setDate(today.getDate() + 1);
                
                const nextWeek = new Date();
                nextWeek.setDate(today.getDate() + 7);
                
                // Format dates as YYYY-MM-DD for date inputs
                const formatDate = (date) => {
                    const year = date.getFullYear();
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const day = String(date.getDate()).padStart(2, '0');
                    return `${year}-${month}-${day}`;
                };
                
                // Set dates for flights+hotels form
                document.getElementById('departure-date').value = formatDate(tomorrow);
                document.getElementById('return-date').value = formatDate(nextWeek);
                document.getElementById('hotel-checkin').value = formatDate(tomorrow);
                document.getElementById('hotel-checkout').value = formatDate(nextWeek);
                
                // Set dates for flights only form
                document.getElementById('flight-departure').value = formatDate(tomorrow);
                document.getElementById('flight-return').value = formatDate(nextWeek);
                
                // Set dates for hotels only form
                document.getElementById('hotel-checkin-date').value = formatDate(tomorrow);
                document.getElementById('hotel-checkout-date').value = formatDate(nextWeek);
            }
            
            // Initialize default dates on page load
            setDefaultDates();
            
            // Search button functionality
            const searchBtn = document.querySelector('.search-btn');
            if(searchBtn) {
                searchBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    // Determine which form is active
                    const activeForm = document.querySelector('.form-section.active');
                    if(!activeForm) return;
                    
                    // Get form values based on active form
                    let formData = {};
                    if(activeForm.id === 'flights-hotels-form') {
                        formData = {
                            tripType: document.getElementById('trip-type').value,
                            travelClass: document.getElementById('travel-class').value,
                            fromCity: document.getElementById('from-city').value,
                            toCity: document.getElementById('to-city').value,
                            departureDate: document.getElementById('departure-date').value,
                            returnDate: document.getElementById('return-date').value,
                            passengers: document.getElementById('passengers').value,
                            rooms: document.getElementById('rooms').value,
                            hotelCheckin: document.getElementById('hotel-checkin').value,
                            hotelCheckout: document.getElementById('hotel-checkout').value
                        };
                        
                        // Validate required fields
                        if(!formData.fromCity || !formData.toCity || !formData.departureDate) {
                            alert('Please fill in all required fields');
                            return;
                        }
                    } 
                    else if(activeForm.id === 'flights-form') {
                        formData = {
                            tripType: document.getElementById('flight-trip-type').value,
                            travelClass: document.getElementById('flight-class').value,
                            fromCity: document.getElementById('flight-from').value,
                            toCity: document.getElementById('flight-to').value,
                            departureDate: document.getElementById('flight-departure').value,
                            returnDate: document.getElementById('flight-return').value,
                            passengers: document.getElementById('flight-passengers').value,
                            cabinClass: document.getElementById('flight-cabin').value,
                            preferredAirline: document.getElementById('flight-airline').value
                        };
                        
                        // Validate required fields
                        if(!formData.fromCity || !formData.toCity || !formData.departureDate) {
                            alert('Please fill in all required fields');
                            return;
                        }
                    } 
                    else if(activeForm.id === 'hotels-form') {
                        formData = {
                            destination: document.getElementById('hotel-destination').value,
                            checkinDate: document.getElementById('hotel-checkin-date').value,
                            checkoutDate: document.getElementById('hotel-checkout-date').value,
                            rooms: document.getElementById('hotel-rooms').value,
                            guests: document.getElementById('hotel-guests').value,
                            category: document.getElementById('hotel-category').value,
                            amenities: Array.from(document.getElementById('hotel-amenities').selectedOptions).map(option => option.value)
                        };
                        
                        // Validate required fields
                        if(!formData.destination || !formData.checkinDate || !formData.checkoutDate) {
                            alert('Please fill in all required fields');
                            return;
                        }
                    }
                    
                    // Show loading/processing message
                    alert('Searching for the best options for you...');
                    
                    // In a real application, this would submit to a server
                    // For this demo, we'll just show a success message
                    setTimeout(() => {
                        alert('We found some great options for your trip! Our travel specialist will contact you shortly with the details.');
                    }, 1500);
                });
            }

            // Newsletter subscription form
            const newsletterForm = document.querySelector('footer form');
            if(newsletterForm) {
                newsletterForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    const emailInput = this.querySelector('input[type="email"]');
                    const email = emailInput.value.trim();
                    
                    if(email && validateEmail(email)) {
                        // Show success message
                        alert('Thank you for subscribing to our newsletter!');
                        emailInput.value = '';
                    } else {
                        alert('Please enter a valid email address.');
                    }
                });
            }
            
            // Email validation helper
            function validateEmail(email) {
                const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return re.test(email);
            }
        });
    </script>
</body>
</html>
